<h1>Login </h1>
<%= form_with url: log_in_path do |form| %>
    <%= form.label :email,class:"form-label mt-3" %>
    <%= form.text_field :email, class:"form-control",placeholder: "dev@gmail.com"%>
    <%= form.label :password,class:"form-label" %>
    <%= form.password_field :password,class:"form-control",placeholder: "Password" %>
    <div class="mt-3">
    <%= form.submit "log-in",class: "btn btn-primary"%>
    <%= link_to "Forgot your password?",password_reset_path,class:"ms-5" %>
    </div>
<% end %>
<p class="mt-4">Don't Have Account?</p>
<%= link_to "Sign-up",sign_up_path,class:"btn btn-primary"%>