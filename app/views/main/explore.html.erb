<h1> All Users </h1>
<div class="d-flex flex-column">
    <% @users.each do |user| %>
        <div class="p-2 bd-highlight d-flex  align-items-center justify-content-evenly">
            <div>
                <%= user.email %>
            </div>
            <div>
                <%= link_to "view",profile_path(user.id),class:"btn btn-primary" %>
            </div>
        </div>
    <% end %>
</div>
<% if @posts %>
<h1>All Posted Images</h1>
    <div class="row row-cols-3">
        <% @posts.each do |post| %>
            <div class="col mt-5">
                <div class="p-2 bd-highlight d-flex  align-items-center justify-content-between">
                    <div>
                        <%= post.user.email %>
                    </div>
                    <div>
                        <%= link_to "view",profile_path(post.user.id),class:"btn btn-primary" %>
                    </div>
                </div>
                <%= link_to image_tag(post.image,class:"rounded mx-auto d-block",style:"width:100%;height:100%;"),show_path(post.id)%>
            </div>
        <% end %>
    </div>
<% end %>
