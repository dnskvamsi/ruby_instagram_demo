<h1>Forget Your Password</h1>

<%= form_with url: password_reset_path do |form|%>
    <%= form.label :email,class:"form-label mt-3" %>
    <%= form.text_field :email, class:"form-control",placeholder: "dev@gmail.com"%>
    <div class="mt-3">
        <%= form.submit "reset-password",class: "btn btn-primary"%>
    </div>
<% end %>